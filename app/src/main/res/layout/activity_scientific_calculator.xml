<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ScientificCalculator"
    android:background="#000">

    <EditText
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:id="@+id/edtText"
       android:hint="ENTER THE NUMBER"
        android:textColorHint="#fff"
        android:padding="10dp"
        android:textAlignment="center"
        android:textColor="#fff"
        android:textSize="13sp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/txt_outline"
        android:layout_centerHorizontal="true"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/BtnRelLayout"
        android:layout_below="@id/edtText"
        android:layout_marginTop="50dp"
        android:background="#000"

        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="Sine"
            android:id="@+id/sinBtn"
            android:textSize="10sp"
            android:onClick="SINE"
            android:background="@drawable/btn_bg"
            android:textColor="#fafafa"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="160dp"
            android:text="cosine"
            android:id="@+id/cosBtn"
            android:textSize="10sp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:onClick="COSINE"
            android:background="@drawable/btn_bg"
            android:textColor="#fafafa"
             />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="295dp"
            android:text="Tangent"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:id="@+id/tanBtn"
            android:onClick="TANGENT"
            android:textSize="10sp"
            android:background="@drawable/btn_bg"
            android:textColor="#fafafa"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="160dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:text="Cot"
            android:layout_below="@+id/cosBtn"
            android:id="@+id/cotBtn"
            android:textSize="10sp"
            android:onClick="COTANGENT"
            android:background="@drawable/btn_bg"
            android:textColor="#fafafa"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="295dp"
            android:text="ArcSin"
            android:layout_below="@+id/tanBtn"
            android:id="@+id/arcsinBtn"
            android:textSize="10sp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/btn_bg"
            android:textColor="#fafafa"
            android:onClick="ARCSINE" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="5dp"

            android:text="BACK"
            android:layout_below="@+id/factBtn"
            android:id="@+id/exitBtn"
            android:textSize="10sp"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_bg"
            android:textColor="#fafafa"
            android:onClick="EXIT"/>
        />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="295dp"
            android:layout_marginBottom="5dp"
            android:text="CLEAR"
            android:id="@+id/clearBtn"
            android:layout_marginTop="362dp"
            android:background="@drawable/btn_bg"
            android:textColor="#fafafa"
            android:textSize="10sp"
            android:onClick="CLEAR"/>

        <Button
            android:id="@+id/cosecBtn"
            android:background="@drawable/btn_bg"
            android:textColor="#fafafa"
            android:layout_width="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:onClick="COSECANT"
            android:text="Cosec"
            android:textSize="10sp"
            android:layout_below="@+id/logBtn"

            />

        <Button
            android:layout_width="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/btn_bg"
            android:textColor="#fafafa"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="Secant"
            android:layout_below="@+id/sinBtn"
            android:id="@+id/secBtn"
            android:textSize="10sp"
            android:onClick="SECANT"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_bg"
            android:textColor="#fafafa"
            android:layout_marginLeft="160dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:text="ArcCos"
            android:layout_below="@+id/logtenBtn"
            android:id="@+id/arccosBtn"
            android:textSize="10sp"
            android:onClick="ARCCOSINE"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_bg"
            android:textColor="#fafafa"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="30dp"
            android:layout_below="@+id/secBtn"
            android:text="ArcTan"
            android:textSize="10sp"
            android:id="@+id/arctanBtn"
            android:onClick="ARCTANGENT"/>
        <Button
            android:layout_width="wrap_content"
            android:background="@drawable/btn_bg"
            android:textColor="#fafafa"
            android:layout_height="wrap_content"
            android:layout_marginLeft="160dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/cotBtn"
            android:text="ArcCosec"
            android:textSize="10sp"
            android:id="@+id/arccosecBtn"
            android:onClick="ARCCOSEC"/>
        />
        <Button
            android:layout_width="wrap_content"
            android:background="@drawable/btn_bg"
            android:textColor="#fafafa"
            android:layout_height="wrap_content"
            android:layout_marginLeft="295dp"
            android:text="ArcSec"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:textSize="10sp"
            android:layout_below="@+id/arcsinBtn"
            android:id="@+id/arcsecBtn"
            android:onClick="ARCSEC"
            />

        <Button
            android:layout_width="wrap_content"
            android:background="@drawable/btn_bg"
            android:textColor="#fafafa"
            android:layout_height="wrap_content"
            android:layout_marginLeft="295dp"
            android:text="ArcCot"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/antilogBtn"
            android:id="@+id/arccotBtn"
            android:textSize="10sp"
            android:onClick="ARCCOT"/>
        <Button
            android:layout_width="wrap_content"
            android:background="@drawable/btn_bg"
            android:textColor="#fafafa"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="LOG-e"
            android:textSize="10sp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/arctanBtn"
            android:id="@+id/logBtn"
            android:onClick="LOG"/>
        <Button
            android:layout_width="wrap_content"
            android:background="@drawable/btn_bg"
            android:textColor="#fafafa"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="160dp"
            android:text="LOG-10"
            android:textSize="10sp"
            android:layout_below="@+id/arccosecBtn"
            android:id="@+id/logtenBtn"
            android:onClick="LOGTEN"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_bg"
            android:textColor="#fafafa"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="295dp"
            android:text="ANTI_10"
            android:textSize="10sp"
            android:layout_below="@+id/arcsecBtn"
            android:id="@+id/antilogBtn"
            android:onClick="ANTILOG_TEN"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_bg"
            android:textColor="#fafafa"
            android:layout_marginLeft="295dp"
            android:text="ANTILOG_E"
            android:layout_marginBottom="5dp"

            android:textSize="10sp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/arccosBtn"
            android:id="@+id/antilogeBtn"
            android:onClick="ANTILOG_E"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_marginBottom="5dp"

            android:layout_height="wrap_content"
            android:text="FACTORIAL"
            android:textSize="10sp"
            android:id="@+id/factBtn"
            android:layout_below="@+id/cosecBtn"
            android:layout_marginLeft="30dp"
            android:background="@drawable/btn_bg"
            android:textColor="#fafafa"
            android:layout_marginTop="10dp"
            android:onClick="FACTORIAL"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_bg"
            android:textColor="#fafafa"
            android:text="Sigma"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/arccosBtn"

            android:id="@+id/SummationBtn"
            android:layout_marginLeft="160dp"
            android:textSize="10sp"
            android:onClick="SUMMATION"/>
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtView4"
        android:layout_below="@+id/BtnRelLayout"
        android:hint="RESULT"
        android:layout_centerHorizontal="true"
        android:textColorHint="#fff"
        android:textColor="#fff"
        android:padding="5dp"
        android:textSize="30sp"
        android:textAlignment="center"
        android:layout_marginTop="30dp"
        android:background="@drawable/txt_outline"
        />

</RelativeLayout>